{
  "name": "charactergen-api",
  "version": "0.1.0",
  "engines": {
    "node": ">=18.15.0"
  },
  "scripts": {
    "build": "tsc && node build.js",
    "deploy": "npm run build && cdk deploy --require-approval never --all",
    "watch": "tsc -w",
    "test": "jest",
    "test:unit": "npm run build && jest ./test/unit",
    "test:integration": "npm run build && jest ./test/integration",
    "test:endToEnd": "jest ./test/end-to-end",
    "cdk": "cdk",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "npm run lint:fix && prettier --write '**/*.ts'"
  },
  "devDependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.303.0",
    "@fluffy-spoon/substitute": "1.208.0",
    "@types/aws-lambda": "^8.10.83",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.14.6",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "aws-cdk": "2.69.0",
    "axios": "^1.3.4",
    "dotenv": "^16.0.3",
    "eslint": "7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "jest": "^29.5.0",
    "prettier": "2.5.1",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "~4.9.5"
  },
  "dependencies": {
    "@aws-lambda-powertools/logger": "1.4.0",
    "@middy/core": "^4.2.8",
    "aws-cdk-lib": "2.69.0",
    "constructs": "^10.0.0",
    "dynamoose": "^3.1.0",
    "esbuild": "^0.17.14",
    "fp-ts": "^2.13.1",
    "io-ts": "^2.2.20",
    "source-map-support": "^0.5.21",
    "uuid": "^9.0.0"
  },
  "jest": {
    "verbose": false,
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testTimeout": 30000,
    "collectCoverageFrom": [
      "cdk/**/*.ts",
      "src/**/*.ts"
    ],
    "collectCoverage": true,
    "setupFiles": [
      "<rootDir>/test/utils/set-env-vars.ts"
    ]
  }
}
